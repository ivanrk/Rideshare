@model ReviewFormViewModel

@{
    ViewData["Title"] = "Rate your passengers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (Model.TravelHasFinished)
{
    @if (Model.Passengers.Count == 0)
    {
        <hr />
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Thank you!</h4>
            <p>All passengers in this trip have been given a review.</p>
        </div>

    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Passengers"></label>
                        <select asp-for="SelectedPassenger" asp-items="Model.Passengers" class="form-control"></select>
                        <span asp-validation-for="Passengers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ratings"></label>
                        <select asp-for="SelectedRating" asp-items="Model.Ratings" class="form-control"></select>
                        <span asp-validation-for="Ratings" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment"></label>
                        <textarea asp-for="Comment" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success col-md-4">Add Review</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <hr />
    <div class="alert alert-danger" role="alert">
        You trip has not finished yet.
    </div>
}

